<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üé¨</text></svg>">
    <title>Movie Finder</title>
</head>

<body class="dark">
    <div class="container">
        <div>
            <div class="col-12">
                <a href="/">
                    <h1 class="titulo"> Movie Finder</h1>
                </a>
            </div>
            <div id="icons" class="row">
                <div class="col-3 mb-1 ">
                    <input type="button" id="darkModeButton" onclick="changeColors(this)" class=" btn btn-warning"
                        value="‚òÄ">
                </div>
                <div class="col-sm-7 col-6"></div>
                <div class="col-sm-2 col-3 mb-1 ">
                    <select id="languages" onchange="changeLanguage(this)" class="form-select">
                        <option value="es">üá™üá∏</option>
                        <option value="en">üá¨üáß</option>
                        <option value="de">üá©üá™</option>
                    </select>
                </div>
            </div>
        </div>
        <form action="/results" class="border border-2 rounded p-3" method="POST" autocomplete="off">
            <input type="text" id="genres" value="<%=datos.genres%>" class="d-none">
            <input id="language" class="d-none" name="language" value="<%=datos.language%>">
            <input type="checkbox" class="d-none" id="darkMode" name="darkMode" <%=(!datos.darkMode
                ||datos.darkMode=='on' ) ?'checked':''%>
            >
            <div class="row p-3">
                <h2 id="basic_data">Datos b√°sicos</h2>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="title">T√≠tulo</label>
                    <input id="title" name="title" class="form-control" type="text">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="genre">G√©nero</label>
                    <select id="genre" name="genre" class="form-select">
                    </select>
                    <input type="text" value="<%=datos.genre%>" id="genreValue" class="d-none">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="type">Tipo</label>
                    <select onchange="changeType(this)" id="type" name="type" class="form-select">
                        <option value="movie">Pel√≠culas</option>
                        <option value="tv">Series</option>
                    </select>
                    <% if (datos.type){ %>
                        <script>document.getElementById("type").value = "<%=datos.type %>"</script>
                        <%} %>
                </div>
            </div>
            <div class="row p-3 mt-2 mb-2">
                <h2 id="filter">Filtros de busqueda</h2>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="min_vote">M√≠nimo de votos</label>
                    <input id="min_vote" name="min_vote" class="form-control" type="number" value="<%=datos.min_vote%>">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="min_avg">Valoraci√≥n m√≠nima</label>
                    <input id="min_avg" min="0" max="10" name="min_avg" class="form-control" type="number"
                        value="<%=datos.min_avg%>">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="sort_by">Ordenar por</label>
                    <select id="sort_by" name="sort_by" class="form-select">
                        <option value="popularity.desc"></option>
                        <option value="release_date.desc"></option>
                        <option value="vote_average.desc"></option>
                        <option value="vote_count.desc"></option>
                    </select>
                    <% if (datos.sort_by){ %>
                        <script>document.getElementById("sort_by").value = "<%=datos.sort_by %>"</script>
                        <%} %>
                </div>
            </div>
            <input type="submit" class="btn btn-success" value="Enviar">
        </form>
    </div>
    <% if(typeof resMovie !='undefined' ){ %>
        <div class="container  mt-2">
            <div class=" border border-2 rounded p-3">
                <h1 id="results">Resultados</h1>
                <div class="accordion" id="accordionExample">
                    <% resMovie.results.forEach(result=>{ %>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading<%=result.id %>">
                                <button class="accordion-button dark collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapse<%=result.id %>" aria-expanded="false"
                                    aria-controls="collapse<%=result.id %>">
                                    <%=result.title?result.title:result.name%>
                                        <%if(result.release_date||result.first_air_date){%>
                                            (<%=(result.release_date?result.release_date:result.first_air_date).split("-")[0]%>)
                                                <%}%>
                                                    <br>
                                                    <%=result.vote_count%> -
                                                        <%=result.vote_average%>‚≠ê
                                </button>
                            </h2>
                            <div id="collapse<%=result.id %>" class="accordion-collapse collapse"
                                aria-labelledby="heading<%=result.id %>" data-bs-parent="#accordionExample">
                                <div class="accordion-body dark">
                                    <div class="row">
                                        <div class="col-lg-9 col-md-6 col-sm-7">
                                            <h5>
                                                <%=result.title%>
                                            </h5>
                                            <h6 class="genres_ids">
                                                <%=result.genre_ids%>
                                            </h6>
                                            <%=result.overview%>
                                                <%if(result.watchProviders){%>

                                                    <h5 class="mt-2 whereText">Donde ver</h5>
                                                    <%if(result.watchProviders &&result.watchProviders.flatrate ){%>
                                                        <h6 class="suscriptionText">
                                                            Suscripci√≥n</h6>
                                                        <div class="row">
                                                            <%result.watchProviders.flatrate.forEach(provider=>{%>
                                                                <img class="watch-provider"
                                                                    src="https://image.tmdb.org/t/p/original/<%=provider.logo_path%>">
                                                                <%})%>
                                                        </div>

                                                        <%}%>
                                                            <%if(result.watchProviders &&result.watchProviders.rent ){%>
                                                                <h6 class="rentText">
                                                                    Alquilar</h6>
                                                                <div class="row">
                                                                    <%result.watchProviders.rent.forEach(provider=>
                                                                        {%>
                                                                        <img class="watch-provider"
                                                                            src="https://image.tmdb.org/t/p/original/<%=provider.logo_path%>">
                                                                        <%})%>
                                                                </div>

                                                                <%}%>
                                                                    <%if(result.watchProviders
                                                                        &&result.watchProviders.buy ){%>
                                                                        <h6 class="buyText">
                                                                            Comprar</h6>
                                                                        <div class="row">
                                                                            <%result.watchProviders.buy.forEach(provider=>
                                                                                {%>
                                                                                <img class="watch-provider"
                                                                                    src="https://image.tmdb.org/t/p/original/<%=provider.logo_path%>">
                                                                                <%})%>
                                                                        </div>

                                                                        <%}%>

                                                                            <%if(result.watchProviders
                                                                                &&result.watchProviders.free ){%>
                                                                                <h6 class="freeText">
                                                                                    Gratis</h6>
                                                                                <div class="row">
                                                                                    <%result.watchProviders.free.forEach(provider=>
                                                                                        {%>
                                                                                        <img class="watch-provider"
                                                                                            src="https://image.tmdb.org/t/p/original/<%=provider.logo_path%>">
                                                                                        <%})%>
                                                                                </div>

                                                                                <%}%>


                                                                                    <%}%>


                                        </div>
                                        <div class="col-lg-3 col-md-6 col-sm-5">
                                            <img class="poster img-thumbnail img-fluid rounded float-right"
                                                src="https://image.tmdb.org/t/p/original<%=result.poster_path%>">
                                        </div>
                                    </div>




                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
            <!--
            <div class="btn-toolbar col-12" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group mr-2" role="group" aria-label="First group">
                    <button type="button" class="btn btn-primary">1</button>
                </div>
                <div class="btn-group mr-2" role="group" aria-label="Second group">
                    <button type="button" class="btn btn-primary">5</button>
                    <button type="button" disabled class="btn btn-secondary">6</button>
                    <button type="button" class="btn btn-primary">7</button>
                </div>
            </div>-->

        </div>
        <% } %>
            <footer class="m-2">
                <a href="https://twitter.com/profetalimon">
                    Author: Diego Vidal del Rosal</a>
                <div id="donate-button-container" class="mb-3">
                    <div id="donate-button"></div>
                    <script src="https://www.paypalobjects.com/donate/sdk/donate-sdk.js" charset="UTF-8"></script>
                    <script>
                        PayPal.Donation.Button({
                            env: 'production',
                            hosted_button_id: '4N6A864ZRPSDA',
                            image: {
                                src: 'https://www.paypalobjects.com/es_ES/ES/i/btn/btn_donateCC_LG.gif',
                                alt: 'Bot√≥n¬†Donar con PayPal',
                                title: 'PayPal - The safer, easier way to pay online!',
                            }
                        }).render('#donate-button');
                    </script>
                </div>

                <br>
                <a href="https://www.themoviedb.org"> This website uses the API of The Movie Database
                    <img class="img-thumbnail img-fluid rounded"
                        src="https://www.themoviedb.org/assets/2/v4/logos/v2/blue_short-8e7b30f73a4020692ccca9c88bafe5dcb6f8a62a4c6bc55cd9ba82bb2cd95f6c.svg">

                </a>
            </footer>
            <!--JS-->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
                crossorigin="anonymous"></script>
            <script src="/js/index.js"></script>
</body>

</html>