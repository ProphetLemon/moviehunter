<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--CSS-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/index.css">
    <title>Movie Finder</title>
</head>

<body class="light">

    <div class="container">
        <div class="row">
            <div class="col-11">
                <a href="/">
                    <h1 class="titulo"> Movie Finder</h1>
                </a>
            </div>
            <div class="col-1 p-5"><input type="button" id="darkModeButton" onclick="changeColors(this)"
                    class=" btn btn-warning" value="üåô">
            </div>


        </div>
        <form action="/results" class="border border-2 rounded p-3" method="POST" autocomplete="off">
            <input type="text" id="genres" value="<%=datos.genres%>" class="d-none">
            <input type="checkbox" class="d-none" id="darkMode" name="darkMode" <%=(!datos.darkMode
                ||datos.darkMode=='on' ) ?'checked':''%>
            >
            <div class="row p-3">
                <h2 id="basic_data">Datos b√°sicos</h2>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="title">T√≠tulo</label>
                    <input id="title" name="title" class="form-control" type="text" value="<%=datos.title%>">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="genre">G√©nero</label>
                    <select id="genre" name="genre" class="form-select">
                    </select>
                    <input type="text" value="<%=datos.genre%>" id="genreValue" class="d-none">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="language">Idioma</label>
                    <select id="language" name="language" class="form-select">
                        <option value="es">Espa√±ol</option>
                        <option value="en">English</option>
                        <option value="de">Deutsch</option>
                    </select>
                    <% if (datos.language){ %>
                        <script>document.getElementById("language").value = "<%=datos.language %>"</script>
                        <%} %>
                </div>
            </div>
            <div class="row p-3 mt-2 mb-2">
                <h2 id="filter">Filtros de busqueda</h2>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="min_vote">M√≠nimo de votos</label>
                    <input id="min_vote" name="min_vote" class="form-control" type="number" value="<%=datos.min_vote%>">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="min_avg">Valoraci√≥n m√≠nima</label>
                    <input id="min_avg" min="0" max="10" name="min_avg" class="form-control" type="number"
                        value="<%=datos.min_avg%>">
                </div>
                <div class="form-group col-md-12 col-lg-4">
                    <label for="sort_by">Ordenar por</label>
                    <select id="sort_by" name="sort_by" class="form-select">
                        <option value="popularity.desc"></option>
                        <option value="release_date.desc"></option>
                        <option value="vote_average.desc"></option>
                        <option value="vote_count.desc"></option>
                    </select>
                    <% if (datos.sort_by){ %>
                        <script>document.getElementById("sort_by").value = "<%=datos.sort_by %>"</script>
                        <%} %>
                </div>
            </div>
            <input type="submit" class="btn btn-success" value="Enviar">
        </form>
    </div>
    <% if(typeof resMovie !='undefined' ){ %>
        <div class="container  mt-2">
            <div class=" border border-2 rounded p-3">
                <h1 id="results">Resultados</h1>
                <div class="accordion" id="accordionExample">
                    <% resMovie.results.forEach(result=>{ %>
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading<%=result.id %>">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#collapse<%=result.id %>" aria-expanded="false"
                                    aria-controls="collapse<%=result.id %>">

                                    <%=result.title%> (<%=result.release_date.split("-")[0]%>)<br>
                                            <%=result.vote_count%> -
                                                <%=result.vote_average%>‚≠ê
                                </button>
                            </h2>
                            <div id="collapse<%=result.id %>" class="accordion-collapse collapse"
                                aria-labelledby="heading<%=result.id %>" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-lg-9 col-md-6 col-sm-7">
                                            <h5>
                                                <%=result.title%>
                                            </h5>
                                            <h6 class="genres_ids">
                                                <%=result.genre_ids%>
                                            </h6>
                                            <%=result.overview%>
                                        </div>
                                        <div class="col-lg-3 col-md-6 col-sm-5">
                                            <img class="img-thumbnail img-fluid rounded float-right"
                                                src="https://image.tmdb.org/t/p/original<%=result.poster_path%>">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
        <a href="https://www.themoviedb.org">
            <footer class="m-2">
                This website uses the API of The Movie Database
                <img class="img-thumbnail img-fluid rounded"
                    src="https://www.themoviedb.org/assets/2/v4/logos/v2/blue_short-8e7b30f73a4020692ccca9c88bafe5dcb6f8a62a4c6bc55cd9ba82bb2cd95f6c.svg">
            </footer>
        </a>
        <% } %>
            <!--JS-->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
                crossorigin="anonymous"></script>
            <script src="/js/index.js"></script>
</body>

</html>